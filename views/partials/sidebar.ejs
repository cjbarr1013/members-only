<!-- prettier-ignore -->
<% const sidebarLinks = currentUser ? 
  [
    {href: '/view/posts', icon: 'home', label: 'Home'}, 
    {href: `/view/profile/${currentUser.username}`, icon: 'profile', label: 'Profile'}, 
    {href: `/edit/profile/${currentUser.username}`, icon: 'settings', label: 'Settings'},
  ] : [
    {href: '/view/posts', icon: 'home', label: 'Home'}, 
    {href: `/auth/login/`, icon: 'profile', label: 'Profile'}, 
    {href: `/auth/login/`, icon: 'settings', label: 'Settings'},
  ] 
%>

<aside
  id="logo-sidebar"
  class="w-sidebar-sm lg:w-sidebar-lg pt-nav fixed top-0 left-0 z-34 h-full -translate-x-full border-r border-gray-200 bg-white transition-transform sm:translate-x-0 dark:border-gray-700 dark:bg-gray-800 [&>*:first-child]:-mt-2 [&>*:first-child]:pt-2"
  aria-label="Sidebar"
>
  <div
    class="!mt-0 flex h-full flex-col justify-between overflow-y-auto bg-white px-3 !py-4 dark:bg-gray-800"
  >
    <ul class="space-y-2 font-medium">
      <!-- prettier-ignore -->
      <% sidebarLinks.forEach(link => { %> 
        <%- include('../components/sidebarLink', {href: link.href, icon: link.icon, label: link.label}) %> 
      <% }); %>
    </ul>
    <%- include('../components/darkModeToggle') %>
  </div>
</aside>
