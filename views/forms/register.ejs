<form action="/auth/register" method="post" class="flex flex-col gap-4">
  <%- include('../components/formErrors', { errors }) %>
  <div class="grid grid-cols-1 gap-4 min-[500px]:grid-cols-2">
    <!--prettier-ignore-->
    <%- include('../components/formInput', {type: 'text', id: 'first', label: 'First', value: formData.first}) %>
    <%- include('../components/formInput', {type: 'text', id: 'last', label: 'Last', value: formData.last}) %>
  </div>
  <!--prettier-ignore-->
  <%- include('../components/formInput', {type: 'text', id: 'username', label: 'Username', value: formData.username}) %>
  <div>
    <%- include('../components/formInput', {type: 'password', id: 'password', label: 'Password', value: ''}) %>
    <p class="mt-2 text-sm text-gray-500">
      * Must be 8â€“32 characters, including uppercase, lowercase, a number, and a symbol.
    </p>
  </div>
  <%- include('../components/formInput', {type: 'password', id: 'passwordVerify', label: 'Verify Password', value: ''}) %>
  <div class="flex flex-col gap-4 min-[500px]:flex-row">
    <label for="adminChecked" class="inline-flex cursor-pointer items-center">
      <input
        id="adminChecked"
        name="adminChecked"
        type="checkbox"
        value="adminChecked"
        class="peer sr-only"
      <%= formData.adminChecked ? ' checked' : '' %>
      />
      <div
        class="peer relative h-6 w-11 rounded-full bg-gray-200 peer-checked:bg-blue-600 peer-focus:ring-4 peer-focus:ring-blue-300 peer-focus:outline-none after:absolute after:start-[2px] after:top-[2px] after:h-5 after:w-5 after:rounded-full after:border after:border-gray-300 after:bg-white after:transition-all after:content-[''] peer-checked:after:translate-x-full peer-checked:after:border-white rtl:peer-checked:after:-translate-x-full"
      ></div>
      <span class="ms-3 font-medium text-gray-900">Admin?</span>
    </label>
    <div class="flex-1">
      <!-- prettier-ignore -->
      <%- include('../components/formInput', {type: 'text', id: 'adminValue', label: 'Secret Password', value: formData.adminValue}) %>
      <p id="adminValueHint" class="mt-2 hidden text-sm text-gray-500">
        Hint: The answer is 'Jace'
      </p>
    </div>
  </div>
  <!-- prettier-ignore -->
  <%- include('../components/button', {type: 'submit', label: 'Register'}) %>
  <div class="self-center">
    <!-- prettier-ignore -->
    <%- include('../components/basicLink', {href: '/auth/login', label: 'Already have an account?'}) %>
  </div>
</form>
