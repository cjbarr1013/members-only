<form
  action="/add/comment/<%= postId %>"
  method="post"
  class="flex flex-col gap-2"
>
  <%- include('../components/formErrors') %>
  <textarea
    id="message"
    name="message"
    class="rounded-lg border-1 border-gray-300 bg-transparent p-2 text-gray-900 focus:ring-2 focus:ring-blue-600 focus:outline-none dark:border-gray-600 dark:text-white"
    placeholder="Add comment..."
    rows="3"
    maxlength="2000"
    required
  >
<%= commentValue %></textarea
  >
  <div class="flex self-end w-full lg:w-[150px] [&>*]:flex-1">
    <%- include('../components/button', {type: 'submit', label: 'Submit'}) %>
  </div>
</form>
