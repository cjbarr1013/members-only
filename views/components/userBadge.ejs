<div class="flex items-center">
  <div class="ms-3 flex items-center">
    <div>
      <button
        type="button"
        class="flex cursor-pointer rounded-lg bg-white text-sm hover:bg-gray-300 focus:ring-4 focus:ring-gray-300 dark:bg-gray-800 dark:hover:bg-gray-600 dark:focus:ring-gray-600"
        aria-expanded="false"
        data-dropdown-toggle="dropdown-user"
      >
        <span class="sr-only">Open user menu</span>
        <div class="flex items-center gap-2 py-1.5 ps-2 pe-4">
          <img
            class="h-10 w-10 rounded-lg object-cover"
            src="<%= reconfigureImage(currentUser.pic_url, 'sm', currentUser.username) %>"
            alt="user photo"
            loading="lazy"
            width="40"
            height="40"
          />
          <div
            class="flex flex-col items-start font-medium text-nowrap dark:text-white"
          >
            <div>
              <%= `${currentUser.first || ''} ${currentUser.last || ''}` %>
            </div>
            <div class="text-sm text-gray-500 dark:text-gray-400">
              <%= `@${currentUser.username}` %>
            </div>
          </div>
        </div>
      </button>
    </div>
    <div
      class="z-56 hidden min-w-50 list-none divide-y divide-gray-100 rounded-lg bg-white text-base shadow-sm dark:divide-gray-600 dark:bg-gray-700"
      id="dropdown-user"
    >
      <ul class="" role="none">
        <li>
          <a
            href="/view/profile/<%= currentUser.username %>"
            class="block rounded-t-lg px-4 py-4 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-600 dark:hover:text-white"
            role="menuitem"
            >Profile</a
          >
        </li>
      </ul>
      <div class="" role="none">
        <button
          href="/auth/logout"
          class="block w-full rounded-b-lg px-4 py-4 text-left text-sm text-gray-700 hover:bg-red-500 hover:text-white dark:text-gray-300"
          role="menuitem"
          type="button"
          data-modal-target="confirm-modal"
          data-modal-toggle="confirm-modal"
          data-confirm
          data-confirm-path="/auth/logout"
          data-confirm-message="Are you sure you want to log out?"
          data-confirm-confirm-btn-msg="Yes please!"
          data-confirm-cancel-btn-msg="No thanks."
        >
          Log Out
        </button>
      </div>
    </div>
  </div>
</div>
