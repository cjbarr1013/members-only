<div class="inline-flex w-full max-w-[450px] shadow-xs" role="group">
  <% labels.forEach(label => { %>
  <button
    id="<%= label.toLowerCase() %>Btn"
    type="button"
    class="text-md flex-1 border-gray-200 px-6 py-2 font-medium text-gray-900 first:rounded-s-lg first:border last:rounded-e-lg last:border hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:text-blue-700 focus:ring-2 focus:ring-blue-700 dark:border-gray-700 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white dark:focus:text-white dark:focus:ring-blue-500"
  >
    <%= label %>
  </button>
  <% }); %>
</div>
