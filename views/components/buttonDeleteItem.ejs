<!--prettier-ignore-->
<% let actionPath;
if (postId && commentId) {
  actionPath = `comment/${commentId}/${postId}`
} else if (postId) 
  actionPath = `post/${postId}`
%>

<form action="/delete/<%= actionPath %>" method="post">
  <button
    id="delete-item-btn"
    type="submit"
    class="inline-flex items-center justify-center self-start rounded-lg bg-transparent p-1 text-sm text-gray-400 hover:bg-gray-200 hover:text-gray-900 dark:hover:bg-gray-600 dark:hover:text-white"
  >
    <svg
      class="h-6 w-6"
      aria-hidden="true"
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      fill="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        fill-rule="evenodd"
        d="M8.586 2.586A2 2 0 0 1 10 2h4a2 2 0 0 1 2 2v2h3a1 1 0 1 1 0 2v12a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V8a1 1 0 0 1 0-2h3V4a2 2 0 0 1 .586-1.414ZM10 6h4V4h-4v2Zm1 4a1 1 0 1 0-2 0v8a1 1 0 1 0 2 0v-8Zm4 0a1 1 0 1 0-2 0v8a1 1 0 1 0 2 0v-8Z"
        clip-rule="evenodd"
      />
    </svg>
    <span class="sr-only">Delete item</span>
  </button>
</form>
